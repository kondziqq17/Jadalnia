<!DOCTYPE html>
<html>
  <head>
    <title>Jadalnia</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
<body>

	<nav class="navbar navbar-default">
		<div class="container">
			<div class="navbar-header">
				<%= link_to "Jadalnia", root_path, class: "navbar-brand" %>
			</div>
			<ul class="nav navbar-nav">
				<li><%= link_to "Zarejestruj", new_user_registration_path %></li>
			<% if current_user.present? %>
				<li><%= link_to "Wyloguj", destroy_user_session_path, method: :delete %></li>
			<% else %>
				<li><%= link_to "Zaloguj", new_user_session_path %></li>
			<% end %>
			</ul>

			 <ul class="nav navbar-nav navbar-right">
			 	<li><%= link_to "Dodaj Danie", new_dish_path %></li>
			 	<li class="dropdown">
			 		<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Dania <span class="caret"></span></a>
          			<ul class="dropdown-menu">
			            <li><a href="#">Dania Główne</a></li>
			            <li><a href="#">Zupy</a></li>
			            <li><a href="#">Desery</a></li>
			            <li><a href="#">Napoje</a></li>
		     		</ul>
		     	</li>
		     </ul>       	
		</div>
	</nav>

	<p class="notice"><%= notice %></p>
	<p class="alert"><%= alert %></p>

<%= yield %>


  </body>
</html>
